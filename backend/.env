# Database
DATABASE_URL="postgresql://paynexus:paynexus123@localhost:5432/paynexus?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# Server
PORT=3000
NODE_ENV=development

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# API Keys
EXCHANGE_RATE_API_KEY="your-exchange-rate-api-key"
EXCHANGE_RATE_API_URL="https://api.exchangerate-api.com/v4/latest"

# Mock Banking APIs
MOCK_BANKING_API_BASE_URL="http://localhost:3001"
MOCK_BANKING_API_KEY="mock-api-key"

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN="http://localhost:3000,http://localhost:19006"

# Logging
LOG_LEVEL="info"
LOG_FORMAT="combined"

# Socket.IO
SOCKET_IO_CORS_ORIGIN="http://localhost:19006"

# Payment Network Monitoring
NETWORK_STATUS_CHECK_INTERVAL="30000"
NETWORK_STATUS_TIMEOUT="5000"

# Transaction Processing
TRANSACTION_TIMEOUT="30000"
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS="1000"

# Notifications
ENABLE_PUSH_NOTIFICATIONS=true
FCM_SERVER_KEY="your-fcm-server-key"

# Development
ENABLE_SWAGGER=true
ENABLE_MOCK_APIS=true 