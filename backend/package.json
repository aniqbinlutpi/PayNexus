{
  "name": "@paynexus/backend",
  "version": "1.0.0",
  "description": "PayNexus Backend API Server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
